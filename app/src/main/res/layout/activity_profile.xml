<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E4E4E"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/montserratsemibold"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/cardView5"
        app:layout_constraintStart_toStartOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <View
        android:id="@+id/divider5"
        android:layout_width="234dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#C8C8C8"
        app:layout_constraintEnd_toEndOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addblog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:text="Add New Article"
        android:background="@android:color/transparent"
        android:drawablePadding="28dp"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/divider5"
        app:layout_constraintStart_toStartOf="@+id/divider5"
        app:layout_constraintTop_toBottomOf="@+id/divider5"
        android:drawableStart="@drawable/add_article" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yourarticle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent"
        android:drawablePadding="28dp"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/white"
        android:text="Your Articles"
        app:layout_constraintEnd_toEndOf="@+id/addblog_btn"
        app:layout_constraintStart_toStartOf="@+id/addblog_btn"
        app:layout_constraintTop_toBottomOf="@+id/addblog_btn"
        android:drawableStart="@drawable/your_article" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/yourarticle_btn"
        app:layout_constraintStart_toStartOf="@+id/yourarticle_btn"
        app:layout_constraintTop_toBottomOf="@+id/yourarticle_btn"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent"
        android:drawablePadding="28dp"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/white"
        android:text="Log out"
        android:drawableStart="@drawable/logout" />

</androidx.constraintlayout.widget.ConstraintLayout>